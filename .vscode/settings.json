// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,

    "src/app/bin/**": true,
    "src/app/obj/**": true,
    "src/app/project.lock.json": true,
    "src/filter/bin/**": true,
    "src/filter/obj/**": true,
    "src/filter/project.lock.json": true,
    "test/app.tests/bin/**": true,
    "test/app.tests/obj/**": true,
    "test/app.tests/project.lock.json": true,
    "test/filter.tests/bin/**": true,
    "test/filter.tests/obj/**": true,
    "test/filter.tests/project.lock.json": true,
    "ui/src/**/*.js": { "when": "$(basename).ts"},
    "ui/src/**/*.js.map": true,
    "ui/src/app/appsettings.js": true,
    "ui/test/**/*.js": { "when": "$(basename).ts"},
    "ui/test/**/*.js.map": true,
    "ui/wwwroot/**": true,
    "ui/node_modules/**": true,
    "ui/bower_components/**": true,
    "ui/typings/**": true,
    "ui/project.lock.json": true,
    ".vscode/**": true,
    "node_modules/**": true,
    "dist/**": true
  },
  "stylelint.config": {
    "extends": "./ui/stylelint.config.js" 
  }
}

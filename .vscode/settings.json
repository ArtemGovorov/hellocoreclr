// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,

    "src/HelloCoreClrApp/bin/**": true,
    "src/HelloCoreClrApp/obj/**": true,
    "src/HelloCoreClrApp/project.lock.json": true,
    "src/HelloCoreClrApp.Rules/bin/**": true,
    "src/HelloCoreClrApp.Rules/obj/**": true,
    "src/HelloCoreClrApp.Rles/project.lock.json": true,
    "test/HelloCoreClrApp.Test/bin/**": true,
    "test/HelloCoreClrApp.Test/obj/**": true,
    "test/HelloCoreClrApp.Test/project.lock.json": true,
    "ui/src/jspm_packages/**": true,
    "ui/src/**/*.js": { "when": "$(basename).ts"},
    "ui/src/**/*.js.map": true,
    "ui/src/app/appsettings.js": true,
    "ui/test/**/*.js": { "when": "$(basename).ts"},
    "ui/test/**/*.js.map": true,
    "ui/wwwroot/**": true,
    "ui/node_modules/**": true,
    "ui/typings/**": true,
    "ui/project.lock.json": true,
    ".vscode/**": true,
    ".idea/**": true,
    ".vs/**": true,
    "**/*.xproj*": true,
    "**/*.sln*": true,
    "node_modules/**": true,
    "reports/**": true,
    "artifacts/**": true
  },
  "htmlhint.options": {
    "spec-char-escape": false
  },
  "stylelint.config": {
    "extends": "./ui/stylelint.config.js" 
  },
  "eslint.options": {
    "configFile": "ui/eslint.json",
    "ignorePattern": "ui/src/jspm.conf.js"
  }
}


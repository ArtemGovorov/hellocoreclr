{
  "version": "0.0.1",
 
  "dependencies": {
    "HelloCoreClrApp":"0.0.1",
    "Microsoft.Dnx.Watcher": "1.0.0-rc1-final"
  },

  "commands": {
    "production": "Microsoft.AspNet.Server.Kestrel",
    "staging": "Microsoft.AspNet.Server.Kestrel  --Hosting:Environment Staging",
    "web": "Microsoft.AspNet.Server.Kestrel  --Hosting:Environment Development",
    "watch-web": "Microsoft.Dnx.Watcher web"
   },

  "frameworks": {
    "dnxcore50": { }
  },

  "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components",
    "typings",
    "src",
    "test",
    "appsettings.json",
    "bower.json",
    "gulpfile.js",
    "karma.conf.js",
    "package.json",
    "stylelint.config.js",
    "tsconfig.json",
    "tslint.json",
    "typings.json",
    "wallaby.conf.js"
  ],

  "scripts": {
    "prepublish": [
        "./node_modules/.bin/bower install", 
        "./node_modules/.bin/typings install", 
        "./node_modules/.bin/gulp production" ]
  }
}

<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="console" xsi:type="ColoredConsole" layout="${longdate}|${pad:padding=5:inner=${level:uppercase=true}}|${message}" >
            <highlight-row condition="level==LogLevel.Trace" foregroundColor="Gray" />
            <highlight-row condition="level==LogLevel.Debug" foregroundColor="Gray" />
            <highlight-row condition="level==LogLevel.Info" foregroundColor="DarkGreen" />
            <highlight-row condition="level==LogLevel.Warn" foregroundColor="DarkYellow" />
            <highlight-row condition="level==LogLevel.Error" foregroundColor="DarkMagenta" />
            <highlight-row condition="level==LogLevel.Fatal" foregroundColor="DarkRed" />
        </target>
    </targets>

    <rules>
        <logger name="*" minlevel="Trace" writeTo="console" />
    </rules>
</nlog>